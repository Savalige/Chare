<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="LargeButtonStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium.Chare</item>
        <item name="android:backgroundTint">@color/Purple</item>
        <item name="iconGravity">textEnd</item>
        <item name="android:padding">15sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="preferenceStyle">
        <item name="android:backgroundTint">@color/LightestPurple</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">12dp</item>
        <item name="layout_constraintWidth_percent">.48</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">10dp</item>
        <item name="iconGravity">textTop</item>
        <item name="iconPadding">20dp</item>
        <item name="iconTint">@color/DarkPurple</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>